<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>helloWorld</servlet-name>
        <servlet-class>com.thoughtworks.server.HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloWorld</servlet-name>
        <url-pattern>/helloWorld</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>byeWorld</servlet-name>
        <servlet-class>com.thoughtworks.server.ByeWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>byeWorld</servlet-name>
        <url-pattern>/byeWorld</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>comments</servlet-name>
        <servlet-class>com.thoughtworks.server.Comments</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>comments</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
</web-app>